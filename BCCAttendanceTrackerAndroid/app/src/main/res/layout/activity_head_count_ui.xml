<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.wit.russellm4.bccattendencetracker.MainActivity">

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="3dp"
        android:text="Head Count"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/B1"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB1"
        android:text="1"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toStartOf="@+id/B2"
        app:layout_constraintTop_toBottomOf="@+id/BDec" />


    <Button
        android:id="@+id/B2"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:onClick="sendMessageB2"
        android:text="2"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BDec" />

    <Button
        android:id="@+id/B3"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB3"
        android:text="3"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/B2"
        app:layout_constraintTop_toBottomOf="@+id/BInc" />

    <Button
        android:id="@+id/B4"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB4"
        android:text="4"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toStartOf="@+id/B5"
        app:layout_constraintTop_toBottomOf="@+id/B1" />

    <Button
        android:id="@+id/B7"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB7"
        android:text="7"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toStartOf="@+id/B8"
        app:layout_constraintTop_toBottomOf="@+id/B4" />

    <Button
        android:id="@+id/B0"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_marginEnd="115dp"
        android:onClick="sendMessageB0"
        android:text="0"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B8" />

    <Button
        android:id="@+id/B5"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:onClick="sendMessageB5"
        android:text="5"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B2" />

    <Button
        android:id="@+id/B6"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB6"
        android:text="6"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/B5"
        app:layout_constraintTop_toBottomOf="@+id/B3" />

    <Button
        android:id="@+id/B8"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:onClick="sendMessageB8"
        android:text="8"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B5" />

    <Button
        android:id="@+id/B9"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:onClick="sendMessageB9"
        android:text="9"
        android:textSize="36sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/B8"
        app:layout_constraintTop_toBottomOf="@+id/B6" />

    <Button
        android:id="@+id/BEnter"
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginEnd="135dp"
        android:layout_marginStart="135dp"
        android:text="Enter"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B0"
        android:onClick="enterHeadCount"/>

    <Button
        android:id="@+id/BBack"
        android:layout_width="116dp"
        android:layout_height="82dp"
        android:onClick="sendMessageBBack"
        android:text="@string/backspace"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/B0"
        app:layout_constraintTop_toBottomOf="@+id/B9"/>

    <Button
        android:id="@+id/BInc"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:onClick="sendMessageBInc"
        android:text="Inc +"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toEndOf="@+id/textBoxHeadCount"
        app:layout_constraintTop_toBottomOf="@+id/Text" />

    <Button
        android:id="@+id/BDec"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:onClick="sendMessageBDec"
        android:text="Dec -"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toStartOf="@+id/textBoxHeadCount"
        app:layout_constraintTop_toBottomOf="@+id/Text" />

    <TextView
        android:id="@+id/textBoxHeadCount"
        android:background="@drawable/back"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text" />


</android.support.constraint.ConstraintLayout>